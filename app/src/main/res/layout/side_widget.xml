<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <hr.tvz.mc2.custom.RobotoTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtSideDay"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".1">

        <hr.tvz.mc2.custom.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/txtSideTempMin"
            android:layout_below="@+id/txtSideDay"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/imgSideImage"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight=".4"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgSideImage"
            android:layout_below="@+id/txtSideDay"
            android:layout_toRightOf="@+id/txtSideTempMin"
            android:layout_weight=".2"
            android:scaleType="fitCenter"
            android:layout_gravity="center" />

        <hr.tvz.mc2.custom.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/txtSideTempMax"
            android:layout_below="@+id/txtSideDay"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/txtSideDescr"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight=".4"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textAlignment="center" />
    </LinearLayout>

    <hr.tvz.mc2.custom.RobotoTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/txtSideDescr"
        android:layout_below="@+id/imgSideImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    </LinearLayout>